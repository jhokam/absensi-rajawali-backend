{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineEnding": "crlf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": "off"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["node_modules", ".vscode", "dist", "/src/generated"]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"globals": ["it", "describe", "expect", "beforeEach"]
	}
}
