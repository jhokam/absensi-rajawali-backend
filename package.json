	"dependencies": {
		"@nestjs/common": "^11.0.12",
		"@nestjs/core": "^11.0.12",
		"@nestjs/platform-express": "^11.0.12",
		"@nestjs/swagger": "^11.1.0",
		"@prisma/client": "^6.5.0",
		"argon2": "^0.41.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"prisma": "^6.5.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"uuid": "^11.1.0",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@eslint/eslintrc": "^3.3.1",
		"@nestjs/cli": "^11.0.5",
