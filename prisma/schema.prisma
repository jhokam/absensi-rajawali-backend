generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JenisKelamin {
  Laki_Laki
  Perempuan
}

enum Jenjang {
  Paud
  Caberawit
  Pra_Remaja
  Remaja
  Pra_Nikah
}

enum Role {
  Admin
  User
}

enum Sambung {
  Aktif
  Tidak_Aktif
}

model Remaja {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nama String
  username String @unique
  jenis_kelamin JenisKelamin
  jenjang Jenjang
  alamat String
  sambung Sambung
  role Role
  password String
}
