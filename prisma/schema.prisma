generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JenisKelamin {
  LAKI_LAKI
  PEREMPUAN
}

enum Jenjang {
  PAUD
  CABERAWIT
  PRA_REMAJA
  REMAJA
  PRA_NIKAH
}

enum Role {
  ADMIN
  USER
}

model Remaja {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nama String
  username String @unique
  jenis_kelamin JenisKelamin
  jenjang Jenjang
  alamat String
  sambung Boolean
  role Role
  password String
}
